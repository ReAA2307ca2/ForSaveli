<Window x:Class="WpfApp1.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="Auth" Height="200" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBox MinWidth="250"/>
            <Label Content="Login"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBox MinWidth="250"/>
            <Label Content="Password"/>
        </StackPanel>

        <StackPanel Margin="0 10 0 0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Sign In" Margin="5 0 5 0" Click="Button_Click"/>
            <Button Content="Register" Margin="5 0 5 0" Click="Button_Click_2"/>
            <Button Content="Exit" Margin="5 0 5 0" Click="Button_Click_3"/>
        </StackPanel>
    </StackPanel>
</Window>
